doctype html
html(lang='en')
    include _header

    body
        include _navbar
        .container
            h1.h1 Edit Admin
            form(action='/admin', method='post')
                .form-group
                    label(for='userName') User Name
                    input#userName.form-control(type='text', name='userName')
                .form-group
                    label(for='oldPassword') Old Password
                    input#oldPassword.form-control(type='password', name='oldPassword')
                .form-group
                    label(for='password') Password
                    input#password.form-control(type='password', name='password')
                button.btn.btn-danger.mr-5(type='reset') Back
                button.btn.btn-primary(type='submit') Save

        include _scripts