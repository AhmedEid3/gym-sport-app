doctype html
html(lang='en')
    include _header
    body
        include _navbar
        .container
            .row.justify-content-center.text-center.mt-3
                .col-md-6
                    .card.text-white.text-center.bg-primary.mb-3
                        .card-header Total Members
                        .card-body
                            h5.card-title #{clientsInfo.length}

        if clientsInfo.length
            .container
                .table-responsive
                    table.example.table.table-hover.table-striped.table-bordered
                        thead.thead-dark
                            tr
                                th(scope='col') #
                                th(scope='col')  Member ID
                                th(scope='col') Name
                                th(scope='col') Show member
                        tbody
                            each value, index in clientsInfo
                                tr
                                    th(scope='row') #{index + 1}
                                    td= value.clientId
                                    td= value.firstName + ' ' + value.lastName
                                    td
                                        a(href='/details-member/'+value.clientId).btn.btn-primary Show member
            hr                

        include _scripts
